---
import Image from "astro/components/Image.astro"
import {PROJECTS} from "../projects.ts"
import CardProject from "./CardProject.astro"

const finalProjects = PROJECTS.filter((project) => !project.hidden)
.slice()
.reverse()


---

<div class="grid gap-8 mb-6 lg:mb-16 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 w-full mx-auto">
    {
        finalProjects.map((project, index) => {
            const num = `${index + 1}`.padStart(2, "0")
            return <CardProject project={project} num={num} />
        })
    }
</div>